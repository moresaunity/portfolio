@{
    Layout = null;
}


<button class="chatbox-open chatbox">
    <i class="fa fa-comment fa-2x chatbox" aria-hidden="true"></i>
</button>
<button class="chatbox-close chatbox">
    <i class="fa fa-close fa-2x chatbox" aria-hidden="true"></i>
</button>
<section class="chatbox-popup chatbox">
    <header class="chatbox-popup__header chatbox">
        <aside style="flex:3">
            <i class="fa fa-user-circle fa-4x chatbox-popup__avatar chatbox" aria-hidden="true"></i>
        </aside>
        <aside style="flex:8">
            <h1 class="chatbox">Sussanah Austin</h1> Agent (Online)
        </aside>
        <aside style="flex:1">
            <button class="chatbox-maximize chatbox"><i class="fa fa-window-maximize chatbox" aria-hidden="true"></i></button>
        </aside>
    </header>
    <main class="chatbox-popup__main chatbox">
        <ul class="Messages chatbox"></ul>
    </main>
    <form id="NewMessageForm" class="chatbox-popup__footer chatbox">
        <aside style="flex:1;color:#888;text-align:center;">
            <i class="fa fa-camera chatbox" aria-hidden="true"></i>
        </aside>
        <aside style="flex:10">
            <textarea type="text" placeholder="Type your message here..." class="chatbox"></textarea>
        </aside>
        <aside style="flex:1;color:#888;text-align:center;">
            <button type="submit" class="chatbox">
                <i class="fa fa-paper-plane chatbox" aria-hidden="true"></i>
            </button>
        </aside>
    </form>
</section>
<section class="chatbox-panel chatbox">
    <header class="chatbox-panel__header">
        <aside style="flex:3">
            <i class="fa fa-user-circle fa-3x chatbox-popup__avatar" aria-hidden="true"></i>
        </aside>
        <aside style="flex:6">
            <h1 class="chatbox">Sussanah Austin</h1> Agent (Online)
        </aside>
        <aside style="flex:3;text-align:right;">
            <button class="chatbox-minimize chatbox"><i class="fa fa-window-restore" aria-hidden="true"></i></button>
            <button class="chatbox-panel-close chatbox"><i class="fa fa-close" aria-hidden="true"></i></button>
        </aside>
    </header>
    <main class="chatbox-panel__main" style="flex:1">
        <ul class="Messages chatbox"></ul>
    </main>
    <footer class="chatbox-panel__footer">
        <aside style="flex:1;color:#888;text-align:center;">
            <i class="fa fa-camera" aria-hidden="true"></i>
        </aside>
        <aside style="flex:10">
            <textarea class="chatbox" type="text" placeholder="Type your message here..."></textarea>
        </aside>
        <aside style="flex:1;color:#888;text-align:center;">
            <i class="fa fa-paper-plane" aria-hidden="true"></i>
        </aside>
    </footer>
</section>
