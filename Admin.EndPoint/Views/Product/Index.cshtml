@model IEnumerable<Admin.EndPoint.Models.Dtos.Product.Item.ProductItemGetResultDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 style="padding-right: 5%" class="text-white text-capitalize ps-3">لیست کاربران</h6>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">مشخصات</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">انبارداری</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">شناسه ها</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">قیمت</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">توضیحات</th>
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div>
                                                <a href="@item.Images.FirstOrDefault()" target="_blank">
                                                    <img style="width: 50px !important; height: 50px !important" src="@item?.Images?.FirstOrDefault()" class="avatar avatar-sm me-3 border-radius-lg" alt="@item.Name">
                                                </a>
                                            </div>
                                            <div style="padding-right: 2%" class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">@item.Name</h6>
                                                <p class="text-xs text-secondary mb-0">@item.Slug</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-xs text-secondary mb-0">@item.AvailableStock</p>
                                        <p class="text-xs text-secondary mb-0">@item.MaxStockThreshold</p>
                                        <p class="text-xs text-secondary mb-0">@item.RestockThreshold</p>
                                    </td>
                                    <td>
                                        <p class="text-xs text-secondary mb-0">@item.Id</p>
                                        <p class="text-xs text-secondary mb-0">@item.ProductBrandId</p>
                                        <p class="text-xs text-secondary mb-0">@item.ProductTypeId</p>
                                    </td>

                                    @*                                     <td class="align-middle text-center text-sm">
                                @if (item.)
                                {
                                <span class="badge badge-sm bg-gradient-success">فعال</span>
                                }
                                else
                                {
                                <span class="badge badge-sm bg-gradient-danger  ">غیر فعال</span>
                                }
                                </td>
                                *@
                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-xs font-weight-bold">@item.Price</span>
                                    </td>
                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-xs font-weight-bold">@item.Description</span>
                                    </td>
                                    <td class="align-middle">
                                        <a href="javascript:;" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                                            ویرایش
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
